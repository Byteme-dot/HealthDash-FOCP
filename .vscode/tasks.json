{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file with GTK",
            "command": "bash.exe",
            "args": [
                "-c",
                "\"gcc -fdiagnostics-color=always -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}.exe $(pkg-config --cflags --libs gtk+-3.0)\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task configured to build GTK applications."
        }
    ],
    "version": "2.0.0"
}
