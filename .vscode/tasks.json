{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GTK Program",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "gcc ${file} -o ${fileDirname}/${fileBasenameNoExtension}.exe $(pkg-config --cflags --libs gtk+-3.0)"
            ],
            "options": {
                "shell": {
                    "executable": "C:/msys64/usr/bin/bash.exe"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiling a GTK program"
        }
    ]
}
